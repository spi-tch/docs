{
  "name": "Spitch",
  "$schema": "https://mintlify.com/docs.json",
  "theme": "maple",
  "colors": {
    "primary": "#2563eb",
    "light": "#3b82f6",
    "dark": "#1e40af"
  },
  "favicon": {
    "light": "/favicon/light.png",
    "dark": "/favicon/dark.png"
  },
  "logo": {
    "light": "/logo/logo-dark.png",
    "dark": "/logo/logo-light.png",
    "href": "https://docs.spitch.app"
  },
  "icons": {
    "library": "fontawesome"
  },
  "navbar": {
    "links": [
      {
        "label": "Dashboard",
        "href": "https://spitch.studio",
        "icon": "chart-line"
      },
      {
        "label": "Community",
        "href": "https://discord.gg/2S7zgKGhPj",
        "icon": "discord"
      },
      {
        "label": "Blog",
        "href": "https://spitch.app/blog",
        "icon": "bookmark"
      }
    ]
  },
  "navigation": {
    "dropdowns": [
      {
        "dropdown": "Documentation",
        "icon": "books",
        "description": "Complete developer documentation and guides",
        "groups": [
          {
            "group": "Getting Started",
            "icon": "rocket",
            "pages": [
              "index",
              "start/setup",
              "start/quickstart",
              "start/libraries"
            ]
          },
          {
            "group": "Core Features",
            "icon": "waveform",
            "pages": [
              "features/speech",
              "features/transcription",
              "features/translation",
              "features/tone"
            ]
          },
          {
            "group": "Advanced Usage",
            "icon": "gear",
            "pages": [
              "start/models",
              "utility/files"
            ]
          },
          {
            "group": "Voice Agents",
            "icon": "robot",
            "pages": [
              "agents/overview",
              "agents/livekit"
            ]
          },
          {
            "group": "Tutorials",
            "icon": "graduation-cap",
            "pages": [
              "code/audio-transcription",
              "code/multilingual-chatbot"
            ]
          },
          {
            "group": "Reference",
            "icon": "book",
            "pages": [
              "concepts/voices",
              "concepts/languages",
              "concepts/pricing",
              "concepts/troubleshooting",
              "keys"
            ]
          }
        ]
      },
      {
        "dropdown": "API Reference",
        "icon": "code",
        "description": "Complete API documentation and schemas",
        "openapi": "https://app.stainless.com/api/spec/documented/spitch/openapi.documented.yml"
      }
    ]
  },
  "thumbnails": {
    "background": "/images/hero-background.png"
  },
  "contextual": {
    "options": [
      "copy",
      "chatgpt",
      "claude",
      "cursor"
    ]
  },
  "seo": {
    "indexHiddenPages": true
  },
  "analytics": {
    "posthog": {
      "apiKey": "phc_project_api_key"
    }
  },
  "styling": {
    "eyebrows": "breadcrumbs"
  },
  "topbarCtaButton": {
    "name": "Get API Key",
    "url": "https://spitch.studio"
  },

  "api": {
    "playground": {
      "mode": "show"
    },
    "examples": {
      "defaults": "required",
      "prefill": true
    },
    "layout": "single-page",
    "maintainOrder": true,
    "hideMethodBadge": false,
    "auth": {
      "method": "bearer",
      "name": "Authorization"
    },
    "request": {
      "example": "show"
    },
    "response": {
      "example": "show"
    }
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true,
    "raiseIssue": true
  },
  "search": {
    "prompt": "Search Spitch API documentation..."
  }
}