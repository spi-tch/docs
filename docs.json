{
  "name": "Spitch",
  "theme": "almond",
  "colors": {
    "primary": "#0f172a",
    "light": "#94a3b8",
    "dark": "#94a3b8"
  },
  "favicon": {
    "light": "/favicon/light.png",
    "dark": "/favicon/dark.png"
  },
  "logo": {
    "light": "/logo/logo-dark.png",
    "dark": "/logo/logo-light.png",
    "href": "https://docs.spitch.app",
    "alt": "Spitch",
    "height": 38
  },
  "layout": "topnav",
  "sidebar": {
    "items": "undecorated"
  },
  "topbar": {
    "style": "default"
  },
  "icons": {
    "library": "fontawesome"
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Go to Studio",
      "href": "https://spitch.studio"
    }
  },
  "navigation": {
    "tabs": [
      {
        "tab": "Docs",
        "groups": [
          {
            "group": "Getting Started",
            "icon": "rocket",
            "pages": [
              "index",
              "start/setup",
              "start/quickstart",
              "start/libraries",
              "keys"
            ]
          },
          {
            "group": "Core capabilities",
            "icon": "waveform",
            "pages": [
              "features/transcription",
              "features/speech",
              "features/translation",
              "features/tone"
            ]
          },
          {
            "group": "Voice agents",
            "icon": "robot",
            "pages": [
              "agents/overview",
              "agents/livekit"
            ]
          },
          {
            "group": "Advanced workflows",
            "icon": "gear",
            "pages": [
              "advanced/models",
              "advanced/files",
              "advanced/jobs",
              "advanced/hitl"
            ]
          },
          {
            "group": "Guides & tutorials",
            "icon": "graduation-cap",
            "pages": [
              "code/audio-transcription",
              "code/multilingual-chatbot",
              "guides/tts-prompting"
            ]
          },
          {
            "group": "Concepts & reference",
            "icon": "book",
            "pages": [
              "concepts/voices",
              "concepts/languages",
              "concepts/pricing",
              "concepts/troubleshooting"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Speech",
            "pages": [
              "api/speech/tts",
              "api/speech/stt"
            ]
          },
          {
            "group": "Text",
            "pages": [
              "api/text/translate",
              "api/text/diacritics"
            ]
          },
          {
            "group": "Files",
            "pages": [
              "api/files/upload",
              "api/files/list",
              "api/files/get",
              "api/files/download",
              "api/files/delete",
              "api/files/usage"
            ]
          },
          {
            "group": "Jobs",
            "pages": [
              "api/jobs/list",
              "api/jobs/get"
            ]
          }
        ]
      }
    ]
  },
  "thumbnails": {
    "background": "/images/hero-background.png"
  },
  "contextual": {
    "options": [
      "copy",
      "chatgpt",
      "claude",
      "cursor"
    ]
  },
  "seo": {
    "indexHiddenPages": true
  },
  "analytics": {
    "posthog": {
      "apiKey": "phc_project_api_key"
    }
  },
  "styling": {
    "eyebrows": "breadcrumbs"
  },
  "api": {
    "playground": {
      "mode": "show"
    },
    "examples": {
      "defaults": "required",
      "prefill": true
    },
    "layout": "single-page",
    "maintainOrder": true,
    "hideMethodBadge": false,
    "auth": {
      "method": "bearer",
      "name": "Authorization"
    },
    "request": {
      "example": "show"
    },
    "response": {
      "example": "show"
    }
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true,
    "raiseIssue": true
  },
  "search": {
    "prompt": "Search Spitch API documentation..."
  }
}
